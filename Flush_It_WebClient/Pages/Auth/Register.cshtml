@page
@model Flush_It_WebClient.Pages.Auth.RegisterModel
@{
    ViewData["Title"] = "Register";
}

@if (!ModelState.IsValid)
{
    <div class="alert alert-danger" role="alert">
        <strong>Validation errors:</strong>
        <ul>
            @foreach (var modelState in ViewData.ModelState.Values)
            {
                foreach (var error in modelState.Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}

<h2>Register</h2>

<form method="post">
    <div>
        <label asp-for="User.Username"></label>
        <input asp-for="User.Username" />
        <span asp-validation-for="User.Username"></span>
    </div>

    <div>
        <label asp-for="User.Email"></label>
        <input asp-for="User.Email" />
        <span asp-validation-for="User.Email"></span>
    </div>

    <div>
        <label asp-for="User.Password"></label>
        <input asp-for="User.Password" type="password" />
        <span asp-validation-for="User.Password"></span>
    </div>

    <button type="submit">Register</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}